{
  "root": true,
  "extends": [
    "next/core-web-vitals",
    "prettier"
  ],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "no-console": "warn",
    "react/no-unescaped-entities": "warn",
    "react/display-name": "warn",
    "import/no-anonymous-default-export": "warn",
    "react-hooks/exhaustive-deps": "off" // Turn off the exhaustive-deps warning completely
  }
}
