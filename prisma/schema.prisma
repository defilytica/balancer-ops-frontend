datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  refresh_token_expires_in String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model Injector {
  id              String     @id @default(cuid())
  address         String
  network         String
  tokenInfo       TokenInfo?
  contractBalance String
  token           String
  gauges          Gauge[]
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  version         String     @default("v1") // "v1" or "v2"
  owner           String?
  maxInjectionAmount      String?
  minWaitPeriodSeconds    String?
  maxGlobalAmountPerPeriod String?
  maxTotalDue             String?

  @@unique([network, address])
}

model TokenInfo {
  id         String   @id @default(cuid())
  name       String
  symbol     String
  decimals   Int?
  injector   Injector @relation(fields: [injectorId], references: [id])
  injectorId String   @unique
}

model Gauge {
  id                     String   @id @default(cuid())
  gaugeAddress           String
  poolName               String?
  amountPerPeriod        String
  rawAmountPerPeriod     String
  maxPeriods             String
  periodNumber           String
  lastInjectionTimeStamp String
  isRewardTokenSetup     Boolean  @default(true)
  doNotStartBeforeTimestamp String?
  injector               Injector @relation(fields: [injectorId], references: [id])
  injectorId             String
}
